<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/reContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/float_window_bg"
        android:outlineProvider="background"
        android:elevation="@dimen/dp_3"
        android:translationZ="@dimen/dp_3"
        android:layout_margin="@dimen/dp_15"
        android:visibility="visible"
        android:layout_centerInParent="true"
        >
        <com.ccys.qyuilib.view.QyRecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/re_bottom"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            />
        <RelativeLayout
            android:id="@+id/re_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:background="@color/colorTransparent"
            >
            <TextView
                android:id="@+id/tv_close"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentRight="true"
                android:background="@drawable/float_window_close_btn_bg"
                android:text="收起"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                />
            <TextView
                android:id="@+id/tv_clean"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/float_window_clean_btn_bg"
                android:text="清空"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/reSmall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/float_window_small_bg"
        android:layout_margin="@dimen/dp_6"
        android:elevation="@dimen/dp_4"
        android:translationZ="@dimen/dp_4"
        android:outlineProvider="background"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        >
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:src="@drawable/floag_window_btn"
           android:layout_margin="@dimen/dp_10"
           />
    </RelativeLayout>
</RelativeLayout>